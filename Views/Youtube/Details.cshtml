@model YoutubeChannel.Models.YoutubeChannelModel

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 800px; width: 100%; background: rgba(255, 255, 255, 0.2); border-radius: 20px; box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);">
        <div class="row g-0">
            <div class="col-md-4 d-flex justify-content-center align-items-center position-relative p-4" style="background-color: #FFCC80; border-top-left-radius: 20px; border-bottom-left-radius: 20px;">
                <img src="@Model.ThumbnailUrl" class="rounded-circle img-fluid" alt="@Model.ChannelTitle" style="width: 150px; height: 150px; object-fit: cover; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
            </div>

            <div class="col-md-8">
                <div class="card-body p-5" style=" border-top-right-radius: 20px; border-bottom-right-radius: 20px;">
                    
                    <h2 class="card-title mb-3 fw-bold text-primary">@Model.ChannelTitle</h2>

                    <p class="card-text fs-6">@Model.ChannelDescription</p>

                    <ul class="list-unstyled mt-4 channel-details">
                        <li class="d-flex align-items-center mb-3">
                            <i class="fas fa-link text-secondary me-2"></i>
                            <span class="text-info">@Model.CustomUrl</span>

                        </li>
                        <li class="d-flex align-items-center mb-3">
                            <i class="fas fa-users text-secondary me-2"></i>
                            <span class="fw-semibold">Subscribers: </span> <span>@Model.SubscriberCount</span>
                        </li>
                        <li class="d-flex align-items-center mb-3">
                            <i class="fas fa-video text-secondary me-2"></i>
                            <span class="fw-semibold">Total Videos: </span> <span>@Model.VideoCount</span>
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="fas fa-calendar-alt text-secondary me-2"></i>
                            <span class="fw-semibold">Joined: </span> <span>@Model.PublishedAt?.ToString("yyyy-MM-dd")</span>
                        </li>
                    </ul>
                    <div class="mt-4">
                        <a href="@Model.ChannelUrl" target="_blank" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm">
                            <i class="fab fa-youtube me-2"></i> Visit Content on YouTube
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
